#!/usr/bin/env ruby
require_relative '../config/environment'

def game_start
  puts "Welcome to CL Tic-Tac-Toe!"
  puts "\nWhat kind of game would you like to begin? Choose mode:"
  
  mode = gets.chomp
  
  if mode == "0"  # Human v Human
    Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new).play
  
  elsif mode == "1"  # Human v Comp.
    puts "Let the other guy go first? [ y / n ]"
      
      if gets.chomp == "y"
        Game.new(Players::Computer.new("X"), Players::Human.new("O"), Board.new).play
      else
        Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new).play
      end 
  
  elsif mode == "2"  # Comp. v Comp.
    Gmae.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new).play
  end
  
  puts "New game? [ y / n ]
  
end

game_start until gets.strip == "n"
    
  
  
  